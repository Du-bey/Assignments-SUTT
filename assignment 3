<div id="cd">
	<div>This is the first time i use javascript in making a website.<br>So guess what....<br><b>HELLO WORLD</b></div>
	<div>
		<button id="cb">
			<span>CLOSE</span>
		</button>
	</div>
</div>
<script type="text/javascript">
	var x = document.getElementById("ob");
	var y = document.getElementById("cd");
	var z = document.getElementById("cb");
	x.addEventListener("click", open);
	z.addEventListener("click", close);
	function open() {
		x.style.display = "none";
		y.style.display = "block";
	}
	function close() {
		y.style.display = "none";
	}
</script>
